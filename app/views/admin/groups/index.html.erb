<% provide(:title, 'Groups') %>

<%= render 'shared/flash_messages' %>

<h3>Groups</h3>

<p>Create new group</p>

<%= render 'admin/groups/group_new_form' %>

<p>All Groups</p>

<%= will_paginate @groups %>

<ul class="groups">
  <% @groups.each do |group| %>
    <li>
      <%= link_to group.name, "/admin/groups/#{group.id}" %> | <%= link_to "Delete", "/admin/groups/#{group.id}/delete" %>
    </li>
  <% end %>
</ul>
