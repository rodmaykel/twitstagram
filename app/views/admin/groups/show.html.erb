<% provide(:title, @group.name) %>

<%= render 'shared/flash_messages' %>

<h3><%= @group.name %></h3>

<p><%= @group.description %></>

<%= link_to "Edit", "/admin/groups/#{@group.id}/edit" %>

<%= render 'admin/groups/subject_new_form' %>


<% if @group.subjects.any? %>
  <h3>Subjects under this group</h3>

   <%= will_paginate @subjects %>

   <ul class="groups">
    <% @subjects.each do |subject| %>
      <li>
        <%= link_to subject.name, "/admin/groups/#{@group.id}/subjects/#{subject.id}/edit" %> | <%= link_to "Delete", "/admin/groups/#{@group.id}/subjects/#{subject.id}/delete" %>
      </li>
    <% end %>
  </ul>
<% end %>
