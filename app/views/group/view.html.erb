<h3><%= @group.name %></h3>
<p>Description: <%= @group.description %></p>
<p>Category: <%= @group.category %></p>

<%= link_to "Members", "/groups/#{@group.id}/#{@group.name.parameterize}" %> &sdot;
<%= link_to "Tweets", "/groups/#{@group.id}/#{@group.name.parameterize}/tweets" %> &sdot;
<%= link_to "Photos", "/groups/#{@group.id}/#{@group.name.parameterize}/photos" %>

<hr />

<p><b>Members</b></p>


<ul class="members">
  <% @subjects.each do |subject| %>
    <li>
      <%= subject.name %> 
    </li>
  <% end %>
</ul>

